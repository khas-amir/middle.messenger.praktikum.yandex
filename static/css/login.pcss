form {
  margin-bottom: 159px;
}

.login-wrapper {
  @mixin center;
  width: 340px;
  top: 50%;
  text-align: center;
  padding: 50px 30px 19px;
  justify-content: center;
  flex-direction: column;
  display: flex;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.14);
  border-radius: 12px;
}

.login-title {
  text-align: center;
  font-size: 20px;
  margin-bottom: 40px;
  margin-top: 0;
}

.login-wrapper__button {
  margin-top: 14px;
}